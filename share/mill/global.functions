#!/bin/sh

# Unused
mill_find_platform() {
    # FIND THE PLATFORM
    # : "Mac", "Linux"
    SYSTEM="$(uname)"
    case "$SYSTEM" in
	Darwin )
	PLATFORM="Mac"
	    ;;
	Linux )
	PLATFORM="Linux"
    esac
}
mill_find_platform # run it to initiate var

prepare_output_folder()
{
    if [[ -e "$OUTPUT_DIR" ]]; then
        # output folder exists!
        return
    else 
        echo "output folder does not exist"
        mkdir -p "$OUTPUT_DIR"
    fi
}